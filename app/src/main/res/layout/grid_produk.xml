<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/goto_detail">
    <LinearLayout
        android:layout_width="155dp"
        android:layout_height="105dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="145dp"
            android:layout_height="95dp"
            card_view:cardElevation="3dp"
            android:padding="2dp"
            card_view:cardCornerRadius="8dp">
            <TextView
                android:id="@+id/nama_prd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="9dp"
                android:paddingTop="37dp"
                android:fontFamily="@font/psbold"
                android:textSize="11dp"
                android:text="Vita Sampi">
            </TextView>
            <TextView
                android:id="@+id/desc_prd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="9dp"
                android:paddingTop="55dp"
                android:fontFamily="@font/pregular"
                android:textSize="11dp"
                android:text="Pupuk organik dari ikan tuna">
            </TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-172dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cornerRadius="20dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/image_prd"
                android:layout_width="155dp"
                android:layout_height="88dp"
                android:layout_weight="1"
                app:cornerRadius="20dp"
                android:src="@drawable/vitasampik"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>