<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="@drawable/profile_background">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/home"
                android:id="@+id/home"
                android:onClick="gotoHome"></ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="75dp"
                android:src="@drawable/profile_pict"
                android:id="@+id/profile_pic"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profile_pic"
                android:text="@string/ganti"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_below="@id/profile_pic"
                android:fontFamily="@font/pregular"
                android:id="@+id/ganti_pp"
                ></TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ganti_pp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/ganti_pp"
                android:outlineProvider="background"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:backgroundTint="@color/white"
                android:id="@+id/card_akun">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/akun"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp">
                    </TextView>
                    <TextView
                        android:id="@+id/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit"
                        android:layout_weight="1"
                        android:fontFamily="@font/pregular"
                        android:gravity="end"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/selesai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/selesai"
                        android:layout_weight="1"
                        android:fontFamily="@font/pregular"
                        android:gravity="end"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="15dp"/>

                </LinearLayout>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/email"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="19dp"
                    ></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:fontFamily="@font/pregular"
                    android:textColor="#737272"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="42dp"></TextView>
                <TextView
                    android:id="@+id/email_pengguna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pregular"
                    android:text="Pengguna"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="64dp">
                </TextView>
                <EditText
                    android:visibility="gone"
                    android:id="@+id/e_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:fontFamily="@font/pregular"
                    android:textSize="14dp"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="64dp"
                    android:background="?android:attr/selectableItemBackground"/>
                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="28dp"
                    android:src="@drawable/username"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="17dp"
                    ></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:fontFamily="@font/pregular"
                    android:textColor="#737272"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="92dp">
                </TextView>
                <TextView
                    android:id="@+id/username_pengguna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ucup Cimol"
                    android:fontFamily="@font/pregular"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="114dp"
                    android:paddingBottom="10dp">
                </TextView>
                <EditText
                    android:visibility="gone"
                    android:id="@+id/e_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:fontFamily="@font/pregular"
                    android:textSize="14dp"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="114dp"
                    android:background="?android:attr/selectableItemBackground"/>
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="30dp"
                    android:src="@drawable/password"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="16.5dp"
                    ></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:fontFamily="@font/pregular"
                    android:textColor="#737272"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="142dp"></TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/password_pengguna"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pregular"
                        android:text="Pengguna"
                        android:inputType="textPassword"
                        android:layout_marginLeft="63dp"
                        android:layout_marginTop="164dp"
                        android:paddingBottom="10dp"/>
                    <ImageView
                        android:id="@+id/eyes"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/blind"
                        android:layout_marginTop="165dp"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/hide"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/eye"
                        android:layout_marginTop="165dp"/>
                </LinearLayout>
                <EditText
                    android:visibility="gone"
                    android:id="@+id/e_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:fontFamily="@font/pregular"
                    android:textSize="14dp"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="164dp"
                    android:background="?android:attr/selectableItemBackground"/>
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="27dp"
                    android:src="@drawable/address"
                    android:layout_marginTop="200dp"
                    android:layout_marginLeft="17.5dp"
                    ></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alamat"
                    android:fontFamily="@font/pregular"
                    android:textColor="#737272"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="192dp"></TextView>
                <TextView
                    android:id="@+id/alamat_pengguna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pregular"
                    android:text="Pengguna"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="214dp"
                    android:paddingBottom="10dp">
                </TextView>
                <EditText
                    android:visibility="gone"
                    android:id="@+id/e_alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Alamat"
                    android:fontFamily="@font/pregular"
                    android:textSize="14dp"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="214dp"
                    android:background="?android:attr/selectableItemBackground"/>
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="29dp"
                    android:src="@drawable/roles"
                    android:layout_marginTop="250dp"
                    android:layout_marginLeft="16dp"
                    ></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sebagai"
                    android:fontFamily="@font/pregular"
                    android:textColor="#737272"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="242dp">
                </TextView>
                <TextView
                    android:id="@+id/role_pengguna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pregular"
                    android:text="Pengguna"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="264dp"
                    android:paddingBottom="20dp">
                </TextView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card_akun"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:outlineProvider="background"
                android:layout_below="@id/card_akun"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:backgroundTint="@color/white"
                android:id="@+id/pengaturan"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pengaturan"
                    android:fontFamily="@font/pmedium"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    ></TextView>

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="47dp"
                    android:src="@drawable/bahasa"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bahasa"
                    android:id="@+id/setting_bahasa"
                    android:fontFamily="@font/pregular"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="48.5dp"
                    android:layout_marginBottom="20dp"></TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:outlineProvider="background"
                android:layout_below="@id/pengaturan"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/white"
                android:id="@+id/bantuan"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="35dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bantuan"
                    android:fontFamily="@font/pmedium"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    ></TextView>
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="28dp"
                    android:src="@drawable/faq"
                    android:layout_marginTop="43dp"
                    android:layout_marginLeft="18dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAQ"
                    android:fontFamily="@font/pregular"
                    android:id="@+id/faq"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="48dp">
                </TextView>
                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="22dp"
                    android:src="@drawable/masukan"
                    android:layout_marginTop="88dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    ></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/masukan"
                    android:id="@+id/masukan"
                    android:fontFamily="@font/pregular"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="88dp">
                </TextView>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:src="@drawable/logout"
                    android:layout_marginTop="128dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="20dp"
                    ></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/logout"
                    android:text="Log out"
                    android:fontFamily="@font/pregular"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="133dp">
                </TextView>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>