<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailProduk">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/image_prd"
            android:layout_width="wrap_content"
            android:layout_height="440dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="-7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/detail_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vit_b1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_button"
            app:tint="#FFFFFF"
            android:padding="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/bulet"
            android:onClick="backToHalaman"
            app:layout_constraintTop_toTopOf="@+id/image_prd"
            app:layout_constraintStart_toStartOf="@+id/image_prd">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_below="@id/image_prd"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/image_prd">
            <LinearLayout
                android:id="@+id/frameharga"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:elevation="3dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@drawable/box_putih">
                <TextView
                    android:id="@+id/detail_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pbold"
                    android:layout_marginLeft="30dp"
                    android:text="Rp54.000"
                    android:textSize="18dp">
                </TextView>
                <TextView
                    android:id="@+id/detail_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pregular"
                    android:layout_marginLeft="30dp"
                    android:text="Vitamin B-1"
                    android:textSize="14dp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/desc_prd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pbold"
                    android:layout_marginLeft="30dp"
                    android:text="@string/detailProduk"
                    android:textSize="17dp">
                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="101dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pregular"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/abu"
                        android:text="@string/berat"
                        android:textSize="12dp">
                    </TextView>
                    <TextView
                        android:id="@+id/detail_brt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pregular"
                        android:layout_marginLeft="30dp"
                        android:text="Baru"
                        android:textSize="12dp">
                    </TextView>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="30dp"
                    android:background="@drawable/garis">
                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="101dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pregular"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/abu"
                        android:text="@string/stok"
                        android:textSize="12dp">
                    </TextView>
                    <TextView
                        android:id="@+id/detail_stok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pregular"
                        android:layout_marginLeft="30dp"
                        android:text="1 Buah"
                        android:textSize="12dp">
                    </TextView>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="30dp"
                    android:background="@drawable/garis">
                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="101dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pregular"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/abu"
                        android:text="@string/kategori"
                        android:textSize="12dp">
                    </TextView>
                    <TextView
                        android:id="@+id/detail_ktgr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pregular"
                        android:layout_marginLeft="30dp"
                        android:text="Nutrisi Tanaman"
                        android:textSize="12dp">
                    </TextView>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="30dp"
                    android:background="@drawable/garis">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dtl_prd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pbold"
                    android:layout_marginLeft="30dp"
                    android:text="@string/deskripsiProduk"
                    android:textSize="17dp">
                </TextView>
                <TextView
                    android:id="@+id/detail_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pregular"
                    android:justificationMode="inter_word"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="Padi (Oryza sativa) merupakan tanaman monokotil tahunan dalam keluarga Poaceae (Gramineae). Kita biasa menanam  rumput Oryza untuk memanen benih (beras) untuk dimakan . . ."
                    android:textSize="12dp">
                </TextView>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/addimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="end">
                <Button
                    android:id="@+id/btn_tambah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/olive"
                    android:layout_marginRight="30dp"
                    android:onClick="moveToAdd"
                    android:text="@string/belisekarang"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>