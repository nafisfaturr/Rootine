<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="240dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/box_tittle"
    android:backgroundTint="@color/coklat"
    android:elevation="4dp"
    android:paddingVertical="20dp"
    android:paddingHorizontal="18dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pilihbahasa"
        android:fontFamily="@font/pbold"
        android:textColor="@color/olive"
        android:textSize="16dp"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"></TextView>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bahasa Indonesia"
        android:id="@+id/lang_indo"
        android:textColor="@color/olive"
        android:textSize="16dp"
        android:padding="10dp"
        android:layout_marginLeft="26dp"
        ></RadioButton>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:id="@+id/lang_eng"
        android:textColor="@color/olive"
        android:textSize="16dp"
        android:padding="10dp"
        android:layout_marginRight="34dp"
        android:layout_marginLeft="26dp"
        ></RadioButton>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日本語"
        android:id="@+id/lang_jap"
        android:textColor="@color/olive"
        android:textSize="16dp"
        android:padding="10dp"
        android:layout_marginRight="34dp"
        android:layout_marginLeft="26dp"
        ></RadioButton>
</LinearLayout>